<?xml version="1.0" encoding="utf-8"?>



    <LinearLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.mitza.businesscard.MainActivity">

        <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5">

            <ImageView
                android:id="@+id/android_developer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:scaleType="centerCrop"
                android:src="@drawable/android_developer" />

        </RelativeLayout>

        <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6.5">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/background" />

            <ImageView
                android:id="@+id/icon_name"
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:layout_marginLeft="39dp"
                android:layout_marginTop="43dp"
                android:src="@drawable/icon_name"/>

            <TextView
                android:id="@+id/my_name"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="47dp"
                android:layout_toRightOf="@id/icon_name"
                android:fontFamily="sans-serif-medium"
                android:paddingLeft="33dp"
                android:text="@string/name"
                android:textColor="#263238"
                android:textSize="19sp"
                android:textStyle="bold|italic"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="4dp"
                android:layout_below="@id/icon_name"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:background="#01579B" />

            <ImageView
                android:id="@+id/icon_phone"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_below="@id/icon_name"
                android:layout_marginLeft="39dp"
                android:layout_marginTop="35dp"
                android:src="@drawable/icon_phone"/>

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="130dp"
                android:layout_toRightOf="@id/icon_phone"
                android:fontFamily="sans-serif-medium"
                android:paddingLeft="40dp"
                android:text="@string/phone"
                android:textColor="#1A237E"
                android:textSize="19sp"
                android:textStyle="italic"
                android:id="@+id/phone_text"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="4dp"
                android:layout_below="@id/icon_phone"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:background="#01579B" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/icon_web"
                android:layout_below="@id/icon_phone"
                android:layout_marginLeft="33dp"
                android:layout_marginTop="29dp"
                android:id="@+id/icon_web"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/web"
                android:fontFamily="sans-serif-medium"
                android:textColor="#E65100"
                android:textSize="19sp"
                android:textStyle="italic"
                android:layout_below="@id/phone_text"
                android:layout_toRightOf="@id/icon_web"
                android:layout_marginTop="45dp"
                android:layout_marginLeft="30dp"
                android:paddingLeft="27dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="4dp"
                android:layout_below="@id/icon_web"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:background="#01579B" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/icon_home"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="38dp"
                android:layout_marginBottom="18dp"
                android:id="@+id/icon_home" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home"
                android:fontFamily="sans-serif-medium"
                android:textColor="#F4FF81"
                android:textSize="19sp"
                android:textStyle="italic"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/icon_home"
                android:layout_marginBottom="26dp"
                android:layout_marginLeft="35dp"
                android:paddingLeft="37dp"/>

        </RelativeLayout>



  </LinearLayout>

